<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:text="이름"
        android:textSize="40dp"
        android:textColor="#009688"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:background="@drawable/quadrangle_record_check">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설문 점수"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="#009688"/>

        <TextView
            android:id="@+id/QuestionScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00점"
            android:textSize="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="80dp"
            android:textColor="#009688"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="270dp"
        android:background="@drawable/quadrangle_record_check">

        <TextView
            android:id="@+id/atext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="악력"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="#009688"/>

        <TextView
            android:id="@+id/AVG_GripStrengthScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00kg"
            android:textSize="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="130dp"
            android:textColor="#009688"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="390dp"
        android:background="@drawable/quadrangle_record_check">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/quadrangle_record_check">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="걷기"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:textColor="#009688"/>

        <TextView
            android:id="@+id/WalkingScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00점"
            android:textSize="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp"
            android:textColor="#009688"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/quadrangle_record_check">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일어서기"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textColor="#009688"/>

            <TextView
                android:id="@+id/StandUpScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00점"
                android:textSize="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginStart="30dp"
                android:textColor="#009688"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/quadrangle_record_check">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="균형"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:textColor="#009688"/>

            <TextView
                android:id="@+id/BalanceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00점"
                android:textSize="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginStart="30dp"
                android:textColor="#009688"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="580dp"
        android:background="@drawable/quadrangle_record_check">

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 점수"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="#009688"/>

        <TextView
            android:id="@+id/TotalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00점"
            android:textSize="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="100dp"
            android:textColor="#009688"/>

    </LinearLayout>


    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="330dp"
        android:background="@android:color/transparent"
        android:src="@drawable/backbutton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="327dp"
        android:text="뒤로 가기"
        android:textSize="15dp"/>


</FrameLayout>