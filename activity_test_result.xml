<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="50dp"
                    android:text="검사 평가 결과"
                    android:textSize="40dp"
                    android:textColor="#009688"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/itemsimage1" />

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/text_box"
                android:layout_marginTop="10dp"
                android:layout_marginStart="130dp">

            <TextView
                android:id="@+id/LeftGrip_StrengthScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좌: 00 kg"
                android:textSize="25dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/RightGrip_StrengthScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:text="우: 00 kg"
                android:textSize="25dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/itemsimage2" />

            <TextView
                android:id="@+id/WalkingScore"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="0 점"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:paddingTop="5dp"
                android:paddingStart="40dp"
                android:background="@drawable/text_box"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/itemsimage3" />

            <TextView
                android:id="@+id/Stand_UpScore"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="0 점"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:paddingTop="5dp"
                android:paddingStart="40dp"
                android:background="@drawable/text_box"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/itemsimage4" />

            <TextView
                android:id="@+id/BalanceScore"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="0 점"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:paddingTop="5dp"
                android:paddingStart="40dp"
                android:background="@drawable/text_box"/>

            <TextView
                android:id="@+id/textSet3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="근력은 남성의 경우 28kg 미만, 여성의"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textSet4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="경우 18kg 미만인 경우 근감소증이"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textSet5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="의심됩니다."
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textSet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:text="검사 결과 총점 00점으로 근감소증이"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textSet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="ㅁㅁㅁㅁ ㅁㅁㅁㅁ."
                android:textSize="20dp" />

            <Button
                android:id="@+id/FinishButton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:text="확인"
                android:textSize="25dp"
                android:backgroundTint="#009688"/>
        </LinearLayout>

    </ScrollView>

</FrameLayout>